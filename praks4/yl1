#!/bin/bash
#
# paarsuse kontroll
#
echo -n "Sisesta suvaline t채isarv: "
read arv
# arvutame j채채k 2-ga jagamisel
jaak=$(( $arv % 2 ))
# 3 % 2 => 0 -> siis arv on paaris
# 8 5 2 => 1 -> siis arv on paaritu
if [ $jaak -eq 0 ]
then
 echo "$arv on paaris"
else
 echo "$arv on paaritu"
fi
# tingimus kontroll on l천ppenud
